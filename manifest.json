{
    "manifest_version": 2,
    "name": "Manga Arrows",
    "version": "1.4.2",

    "description": "adds prev/next Chapter functionality for some generic Manga Sites that dont have this feature themselves",

    "content_scripts": [
        {
            "matches": [
                "*://manganelo.com/chapter/*",
                "*://readmanganato.com/*",
                "*://www.webtoons.com/en/*",
                "*://*/comics/*",
                "*://www.asurascans.com/*"
            ],
            "js": ["mangaArrows.js"]
        }
    ]
}
