{
    "manifest_version": 2,
    "name": "Manga Arrows",
    "version": "1.5.4",

    "description": "Adds prev/next Chapter functionality for some generic Manga Sites that dont have this feature themselves",

    "content_scripts": [
        {
            "matches": [
                "*://manganelo.com/chapter/*",
                "*://manganato.com/*",
                "*://chapmanganato.com/*",
                "*://www.webtoons.com/en/*",
                "*://*/comics/*",
                "*://www.asurascans.com/*",
                "*://asurascans.com/*",
                "*://asura.gg/*",
                "*://flamescans.org/*",
                "*://luminousscans.com/*",
                "*://reaperscans.com/*"
            ],
            "js": ["mangaArrows.js"]
        }
    ]
}
